<!--index.wxml-->
<view class="container">

  <view class="{{currentTab == 0 ? 'show':'hidden'}}">
    <scroll-view class='sv' scroll-y='true' style='height:100%;'>
      <button class='btn1'>
        <text class="hello">1</text>
      </button>
      <button class='btn2'>
        <text class="hello">2</text>
      </button>
      <button class='btn3'>
        <text class="hello">3</text>
      </button>
    </scroll-view>
  </view>
  <view class="{{currentTab == 1 ? 'show':'hidden'}}">

    <text>动态</text>

  </view>

  <view class="{{currentTab == 2 ? 'show':'hidden'}}" >
    <view class="container">
      <view class="userinfo">
        <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 登录 </button>
        <block wx:else>
          <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
          <text class="userinfo-nickname">{{userInfo.nickName}}</text>
        </block>
      </view>
      <view class="usermotto">
        <text class="user-motto">{{motto}}</text>
      </view>
    </view>

  </view>


  <mp-tabbar style="position:fixed;bottom:0;width:100%;left:0;right:0;" list="{{list}}" bindchange="tabChange"></mp-tabbar>

</view>